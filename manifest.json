{
  "manifest_version": 3,
  "name": "Gemini IDE Bridge",
  "version": "0.0.1",
  "description": "本地代码桥接助手 - 支持版本回退",
  "permissions": [
    "activeTab",
    "scripting"
  ],
  "host_permissions": [
    "https://gemini.google.com/*"
  ],
  "content_scripts": [
    {
      "matches": ["https://gemini.google.com/*"],
      "js": ["content.js"],
      "run_at": "document_end"
    },
    {
      "matches": ["https://gemini.google.com/*"],
      "js": ["ide_core.js"],
      "run_at": "document_end",
      "world": "MAIN"
    }
  ]
}
